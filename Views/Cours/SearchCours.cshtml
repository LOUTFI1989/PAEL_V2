@model IEnumerable<PAEL_V2.Models.Cours>

@{
    ViewData["Title"] = "SearchCours";
}

<h1>Cours</h1>

<p>
    <a asp-action="Create">Ajouter un cours</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CoursId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CoursId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CoursId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


